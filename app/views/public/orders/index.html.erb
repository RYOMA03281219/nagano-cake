<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 ">
      <h2>注文履歴一覧</h2>

      <table class="table table-bordered">
        <thead>
          <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <!--<td>ステータス</td>-->
            <td>注文詳細</td>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postal_code %>
                　<%= order.address %>
                　<%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>
              </td>
              <td><%= order.billing_amount %>円</td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
