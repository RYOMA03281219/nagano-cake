<p id="notice"></p>
<div class="container">
  <div class="row">

    <h2>注文情報確認</h2>

    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= image_tag order.item.get_image(50,50) %><%= order.item.name %></td>
              <td><%= order.item.with_tax_price %></td>
              <td><%= order.item.amount %></td>
              <td><%= order.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-bordered">
        <tr>
          <td>送料</td>
          <td><%= @postage %></td>
        </tr>

        <tr>
          <td>商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <td>請求金額</td>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <br></br>
    <table class="table table-borderless">
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <td>お届け先</td>
        <td>
          〒<%= @customer.postal_code %>
          　<%= @customer.address %>
          　<%= @customer.last_name %><%= @customer.first_name %>
        </td>
      </tr>
    </table>
  </div>
</div>
