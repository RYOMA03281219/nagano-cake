<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 ">
      <h2>注文履歴詳細</h2>
    </div>

    <td><td>
    <div class="col-md-8">
      <h3>注文情報</h3>
      <table class="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <td>配送先</td>
          <td>
            〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
         </tr>

        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>

       </table>
    </div>


    <div class="col-md-4">
      <h3>請求情報</h3>
      <table class="table table-bordered">
        <tr>
          <td>商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <td>配送料</td>
          <td><%= @order.postage %></td>
        </tr>

        <tr>
          <td>ご請求額</td>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>

      </table>
    </div>

    <div class="col-md-4">
      <h3>注文内容</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>商品</td>
            <td>単価(税込)</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail|%>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>