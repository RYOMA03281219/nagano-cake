<div class="container">
  <div class="row">
    <h2><strong>登録情報</strong>
      <%= link_to "編集する", customers_information_edit_path, class: "btn btn-default btn-lg btn-info" %>
    </h2>

    <table class="table table-bordered">
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %><%= @customer.first_name %></th>
      </tr>

      <tr>
        <th>カナ</th>
        <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
      </tr>

      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>

      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>

      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </table>

    <div>
      <h2><strong>配送先</strong>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-default btn-lg btn-info" %>
      </h2>
    </div>

    <div>
      <h2><strong>注文履歴</strong>
        <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-default btn-lg btn-info" %>
      </h2>
    </div>

  </div>
</div>
