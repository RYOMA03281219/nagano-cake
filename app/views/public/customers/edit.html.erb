<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 ">
      <h2>会員情報編集</h2>

      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

        <div class="field">
          <%= f.label :"氏名" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :"電話番号" %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div id = "item-action-btn">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>

      <div class="actions">
        <%= link_to "退会する", customers_cancellation_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
