<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル編集</h2>
        <%= form_with model: @address, url: addresses_path, method: :patch do |f| %>
        <div class="field">
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :"宛名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <td><%= f.submit "変更内容を保存", class: "btn btn-default btn-lg btn-info" %></td>
      <% end %>
