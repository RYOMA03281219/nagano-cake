<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-1">
          <h2>注文履歴一覧</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
                <th colspan="4"></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                  <td>
                    <%= link_to order.created_at.strftime("%Y/%m/%d/ %H:%M:%S") %>
                  </td>
                  <td>
                    <%= order.name %>
                  </td>
                  <td>
                    <%= order.order_details.sum(:amount) %>
                  </td>
                   <td>
                    <%= order.order_status %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>