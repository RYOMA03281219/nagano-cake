<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <table class="table table-borderless">
        <tr>
          <td>購入者</td>
          <td><%= @order.customer.last_name %></td>
          <td><%= @order.customer.first_name %></td>
        </tr>

        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>

        <tr>
          <td>配送先</td>
          <td>〒<%= @order.customer.postal_code %></td>
          <td><%= @order.customer.address %></td>
          <td><%= @order.customer.last_name %></td>
          <td><%= @order.customer.first_name %></td>
        </tr>

        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method%></td>
        </tr>

        <tr>
          <td>注文ステータス</td>
          <td><%#= @customer.id%></td>
          <td><%#= submit "更新", class: "btn btn-default btn-lg btn-info" %></td>
        </tr>
      </table>
      <div class="col-md-9">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td>商品名</td>
              <td>単価(税込)</td>
              <td>数量</td>
              <td>小計</td>
              <td>制作ステータス</td>
              <td></td>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody class="table table-borderless">
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.purchase_price %></td>
                <td><%= order_detail.amount %></td>
                <td><%= (order_detail.purchase_price * order_detail.amount.to_s(:delimited) )%></td>
                <td><%#= order_detail.select :production_status %></td>
                <td><%#= order_detail.submit "更新", class: "btn btn-default btn-lg btn-info"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col-md-3">
          <tr>
            <td>商品合計</td>
            <td><%= @total %>円</td>
          </tr>

          <tr>
            <td>送料</td>
            <td><%= @order.postage %>円</td>
          </tr>

          <tr>
            <td>請求金額合計</td>
            <td><%= @order.billing_amount.to_s(:delimited) %>円</td>
          </tr>
        </div>
      </div>
    </div>
  </div>
</div>

