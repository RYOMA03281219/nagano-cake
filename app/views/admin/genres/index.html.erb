<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class ="form-group">
          <label for="genre_name">ジャンル名</label>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-default btn-lg btn-info" %></td>
          <!--<div id = "item-action-btn">-->

          <!--</div>-->
        </div>
      <% end %>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-default btn-lg btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
