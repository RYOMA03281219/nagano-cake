<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h2>商品詳細</h2>

      <div class="col-md-3">
        <%= image_tag @item.get_image(100,100) %>
      </div>

      <table class="table table-borderless">
        <div class="col-sm-8 offset-md-1">
          <tr>
            <td>商品名</td>
            <%= @item.name %>
          </tr>

          <tr>
            <td>商品説明</td>
            <%= @item.introduction %>
          </tr>

          <tr>
            <td>ジャンル</td>
            <%= @genre.name %>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <%= (@item.price * 1.1) %>(<%= @item.price %>)
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active %>
              <p>販売中</p>
            <% else %>
              <p>販売停止中</p>
            <% end %>
            </td>
          </tr>
        </table>
        <div id = "item-action-btn">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-default btn-lg btn-info " %>
      　</div>

      </div>
    </div>
  </div>
